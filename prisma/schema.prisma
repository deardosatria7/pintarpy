generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PgProduk {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now()) @map("created_at") // Mapping ke created_at
  namaProduk String   @map("nama_produk") // Mapping ke nama_produk

  @@map("pg_produk") // Mapping model Prisma ke tabel pg_produk di database
}